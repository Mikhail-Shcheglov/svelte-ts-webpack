# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = crlf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,class,cpp,cs,go,h,htm,jslib,jspre,json,kt,m,mm,php,py,rs,swift}]
indent_size = 4

[*.{html,js,ts,jsx,tsx,svelte,css,lua,rb,sass,scss,sh,sql,xaml,xml,yml,yaml}]
indent_size = 2
